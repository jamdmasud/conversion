@model todo.Models.Item

<h2>View To-Do Item Details</h2>

<div>
    <h4>Item</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Completed)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Completed)
        </dd>
        @if (Model.WorkingDetail != null && Model.WorkingDetail.Count > 0)
        {
            <table class="table table-hover">
                <tr>
                    <th>ID</th>
                    <th>Amount</th>
                    <th>Working Date</th>
                </tr>
                @foreach (var item in Model.WorkingDetail)
                {
                    <tr>
                        <td>@item.WorkingDetailId</td>
                        <td>@item.Amount</td>
                        <td>@item.WorkingDate</td>
                    </tr>
                }

            </table>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id, category = Model.Category }) |
    @Html.ActionLink("Back to List", "Index")
</p>
